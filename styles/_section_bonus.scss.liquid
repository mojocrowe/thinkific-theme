// Bonus
// ======================================

.bonus {

  &.section__column-layout__two-column {
    @include screen-lg-min {

      .section__content {
        padding-left: 0;
      }
    }
  }
}

.bonus__container {
  @include make-container;
}

.bonus__wrapper {
  @include make-row(true);
}

.bonus__list-item {
  margin: 0 0 $gutter-width;
  padding: 0 0 $gutter-width / 2;
  border-bottom: $interface__border;

  &:last-of-type {
    margin: 0;
    padding: 0;
    border-bottom: 0;
  }

  .section__heading--secondary {
    margin: 0 0 $gutter-width / 2;
    font-weight: 400;
  }

  .bonus__list-item__price {
    @include screen-md-min {
      font-size: $body__font-size * 1.125;
    }
    color: $accent__color;
    font-family: $body__font-family;
    font-size: $body__font-size;
    font-weight: bold;
  }
}
