// Thank you upsells
// ======================================

.checkout__thank-you-upsells {
  @include make-col(12);

  &__container {
    @include make-container;
    padding-top: $gutter-width * 2;
    padding-bottom: $gutter-width * 2;

    .section__headings {
      margin: 0 0 $gutter-width;
    }

    .section__heading {
      margin-bottom: $gutter-width / 4;
    }
  }

  &__list {
    @include make-row(true);
    padding: 0 1rem;
  }

  &__list-item {
    width: 100%;
    padding-bottom: 2rem;
  }
}
