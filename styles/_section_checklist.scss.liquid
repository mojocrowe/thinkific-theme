// Checklist
// ======================================

.checklist {

  &.section__column-layout__two-column {
    @include screen-lg-min {

      .checklist__list-item {
        padding-left: 0;
      }
    }
  }
}

.checklist__container {
  @include make-container;
}

.checklist__wrapper {
  @include make-row(true);
}

.checklist__list {
  @include make-row(false);
}

.checklist__list-item {
  @include screen-sm-min {

    &:last-child {
      p {
        border-bottom: 0;
      }
    }
  }
  @include screen-sm-max {

    &:last-child {
      p {
        border-bottom: 0;
      }
    }
  }
  @include make-col(12, false);
  @include display(flex);

  padding-top: $gutter-width;
  padding-bottom: $gutter-width;
  border-bottom: $interface__border;

  p {
    margin: 0;
  }

  .fa {
    @include flex(0 0 auto);
    @include align-self(center);

    display: inline-block;
    width: 2.5rem;
    height: 2.5rem;
    margin: 0 $gutter-width / 2 0 0;
    float: left;
    border-radius: 50%;
    background-color: $accent__color;
    color: dynamic-contrast-color($accent__color);
    font-size: 1em;
    line-height: 2.5em;
    text-align: center;
  }
}
