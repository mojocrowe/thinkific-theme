// Base
// ======================================

html {
  @include screen-md-min {
    font-size: $body__font-size;
  }
  font-size: $body__font-size--mobile;
  -ms-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  scroll-behavior: smooth;
}

* {

  &,
  &:before,
  &:after {
    box-sizing: inherit;
  }
}

a {
  @include transition(all 200ms ease);

  color: $link__color;

  &:hover,
  &:focus,
  &:active {
    color: $link__color--active;
  }

  .open & {
    @include transition(background-color 200ms ease, color 200ms ease);
  }
}

body {
  @include display(flex);
  @include flex-direction(column);

  position: relative;
  height: 100vh;
  margin: 0;
  padding: 0;
  background-color: $body__background-color;
  color: $body__text-color;
  overflow-x: hidden;
}
