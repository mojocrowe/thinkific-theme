// Products
// ======================================
.card {
  @include card;
  overflow: hidden;

  a {
    text-decoration: none;
  }

  &__img-container {
    @include display(flex);
    position: relative;
  }

  &__img {
    aspect-ratio: 16 / 9;
    width: 100%;
    object-fit: cover;
  }

  &__body-container {
    @include display(flex);
    @include flex-direction(column);
    height: 100%;
  }

  &__body {
    width: 100%;
    height: 100%;
    padding: $padding-2;
  }

  &__category {
    margin-bottom: $margin-base;
    color: $body__text-color;
    font-size: 14px;
    text-transform: uppercase;
  }

  &__name {
    @include card-name;
    margin-bottom: 0;
  }

  &__product-info {
    @include display(flex);
    @include align-items(center);
    color: $body__text-color;
    font-size: 14px;

    .toga-icon {
      margin-right: $margin-base;
    }
  }

  &__description {
    @include line-clamp;
    margin-top: $margin-base;
    margin-bottom: 0;
    color: $body__text-color;
    font-weight: 400;
  }

  &__price {
    @include display(flex);
    margin-bottom: 0;
    color: $body__text-color;
    font-size: 14px;
    line-height: 1.5;
  }

  &__price-container {
    padding: 0 $padding-2 $padding-2;

    strong {
      flex-shrink: 0;
      margin-right: $margin-base;
      color: $body__text-color;
      font-family: $secondary-heading__font-family;
      font-size: 20px;
      font-weight: $secondary-heading__font-weight;
      line-height: $heading__line-height;
    }
  }

  &__badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: $card__border-radius;
    box-shadow: $shadow-raised;

    &--presell {
      display: block;
      position: absolute;
      top: 16px;
      right: 16px;
      background-color: $accent__color;
      color: dynamic-contrast-color($accent__color);
      z-index: z-index(element--foreground);
    }

    &--free {
      background-color: $light-green;
      color: $dark-green;
    }
  }

  &__reviews {
    @include display(flex);
    @include align-items(center);
    margin-top: $margin-base;
    color: $body__text-color;
    font-size: 14px;

    .review__star {
      color: $review-star__filled-color;
    }
  }

  &__reviews-average {
    margin-left: $margin-base;
    color: $heading__color;
    font-weight: bold;
  }

  &--community {
    .toga-icon-people {
      font-size: 18px;
    }
  }
}

// Category cards
.card--category {
  .card__body-container {
    padding: $padding-2;
  }
}

// Featured cards
.card--featured {
  @include flex-direction(column);
  @include screen-lg-min {
    @include flex-direction(row);
  }

  .card {
    @include screen-lg-min {
      &__name {
        -webkit-line-clamp: 2;
      }

      &__img {
        width: 368px;
      }

      &__body-container {
        @include flex-direction(row);
        @include flex-basis(100%);
      }

      &__body {
        @include display(flex);
        @include flex-direction(column);
        color: unset;

        &:focus {
          outline-offset: -2px;
        }
      }

      &__price-container {
        @include display(flex);
        @include justify-content(space-between);
        width: 100%;
        margin-top: auto;
        padding: $padding-2 0 0;
      }

      &__price {
        padding-right: $padding-2;
      }

      &__button {
        flex-shrink: 0;
        align-self: flex-end;
        margin-left: 0;
      }
    }

    &__price-container {
      padding-left: 0;
    }

    &__button {
      margin: $margin-2;
    }
  }
}

// Dashboard cards
// -------------------------------------------------
.card--dashboard {
  .card {
    &__name {
      margin-bottom: $margin-2 * 2;
      text-align: center;
      text-transform: none;

      &--community {
        margin-bottom: $margin-2;
      }
    }

    &__course-link {
      text-decoration: none;

      &:focus {
        outline: transparent; // this one doesn't have tab focus so does not need outline
      }
    }

    &__body {
      position: relative;
      height: auto;
    }

    &__body--large {
      padding: 46px $padding-2 0;
    }

    &__posts {
      margin-top: auto;
      margin-bottom: 46px;
      color: $body__text-color;
      line-height: 1;
      text-align: center;
    }

    &__coming-soon {
      opacity: 0.75;

      .fa {
        display: block;
      }
    }

    &__progress--circle {
      @include transform(translatex(-50%));
      position: absolute;
      top: -($progress__circle-size/2);
      left: 50%;
      width: $progress__circle-size;
      height: $progress__circle-size;
      margin: 0 auto;
      text-align: left;
      z-index: z-index(element--foreground);

      .circle {
        .fill,
        .mask {
          @include backface-visibility(hidden);
          @include transition($progress__transition);
          position: absolute;
          width: $progress__circle-size;
          height: $progress__circle-size;
          border-radius: 50%;
        }

        .mask {
          clip: rect(0, $progress__circle-size, $progress__circle-size, $progress__circle-size/2);

          .fill {
            background-color: $progress__circle-color;
            clip: rect(0, $progress__circle-size/2, $progress__circle-size, 0);
          }
        }
      }

      .progress__percentage {
        position: absolute;
        width: $progress__inset-size;
        height: $progress__inset-size;
        margin-top: ($progress__circle-size - $progress__inset-size)/2;
        margin-left: ($progress__circle-size - $progress__inset-size)/2;
        border-radius: 50%;
        background-color: $interface__background-color;
        color: $accent__color;
        font-family: $heading__font-family;
        font-size: 0.75rem;
        line-height: $progress__inset-size;
        text-align: center;
        box-shadow: $shadow-1;

        &:before {
          position: absolute;
          top: 0;
          left: 0;
          width: $progress__inset-size;
          height: $progress__inset-size;
          border: $interface__border;
          border-radius: 50%;
          content: "";
        }
      }
      $i: 0;
      $increment: 180deg / 100;
      @for $i from 1 through 100 {
        &[data-progress="#{$i}"] {
          .circle {
            .fill,
            .mask.full {
              @include transition-delay(1s);
              @include transform(rotate($increment * $i));
            }

            .fill.fix {
              @include transform(rotate($increment * $i * 2));
            }
          }
        }
      }
    }

    &__progress--bar {
      @include make-col(12);
      margin: 0 0 $gutter-width / 2;
      padding: 0;

      .progress__percentage {
        position: relative;
        margin: 0 0 $gutter-width / 2;
        font-size: 2rem;
        font-weight: 400;

        &:after {
          display: block;
          position: absolute;
          bottom: $gutter-width / -2;
          left: 0;
          width: 100%;
          height: 3px;
          background-color: dynamic-contrast-color($interface__background-color--active);
          content: "";
          z-index: z-index(default);
        }
      }

      .progress__bar {
        display: block;
        position: relative;
        top: -3px;
        height: 3px;
        background-color: $accent__color;
        z-index: z-index(element--background);
      }
    }

    &__details {
      @include make-row(false);
      margin-top: auto;
      border-top: $interface__border;

      a,
      .card__coming-soon {
        @include screen-md-min {
          padding: $gutter-width / 1.5;
        }
        @include flex(0 0 50%);
        display: inline-block;
        width: 100%;
        padding: $gutter-width / 2;
        border: 0;
        font-size: $body__font-size * 0.875;
        font-weight: 600;
        line-height: 1.4rem;
        text-align: center;

        &:first-child {
          border-right: $interface__border;
        }

        &:only-child {
          @include make-col(12);
        }

        .fa {
          display: block;
        }
      }

      a {
        @include transition(box-shadow 200ms ease, color 200ms ease);
        background-color: $interface__background-color;
        color: $heading__color;
        text-decoration: none;

        &:active,
        &:hover,
        &:focus {
          @include transition(background-color 200ms ease, color 200ms ease, box-shadow 200ms ease);
          background-color: $interface__background-color--active;
          color: $link__color;
          box-shadow: $shadow-button;
        }

        &:focus {
          outline-offset: -2px;
        }
      }
    }
  }
}

.products__list {
  @include make-row(true);
  @include justify-content(center);
}

.products__list-item {
  @media all and (min-width: $custom-breakpoint-sm) {
    @include make-col(6);
  }
  @include screen-lg-min {
    flex: 0 0 33.33%;
    max-width: 33.33%;
  }
  @include make-col(12);
  padding-bottom: $padding-3;
}

.products__collections-list {
  @include make-row(false);
  @include align-items(center);

  position: relative;
  margin: 0 0 $gutter-width / 2;
}

.products__collection-list-heading {
  margin-right: $gutter-width;
}

.products__collections-list-item {
  @include screen-md-min {
    display: inline-block;
    width: auto;
    margin: 0 $gutter-width 0 0;

    &:last-child {
      margin: 0;
    }
  }

  display: block;
  width: 100%;
  padding: $gutter-width / 4 0;
  line-height: 1;

  a {
    @include screen-md-min {
      padding-left: 0;
    }

    position: relative;
    padding-left: $gutter-width / 2.5;
    color: $heading__color;
    line-height: 1;
    text-decoration: none;

    &:after {
      @include screen-md-min {
        bottom: -5px;
        width: 100%;
        height: 2px;
      }

      display: inline-block;
      position: absolute;
      bottom: 0;
      left: 0;
      width: 3px;
      height: 100%;
      background-color: $link__color;
      content: none;
    }

    &.active,
    &:active,
    &:hover {
      color: $link__color;

      &:after {
        content: "";
      }
    }
  }
}

.product-action-button--private {
  a {
    text-decoration: none;
  }

  .fa {
    margin-right: $gutter-width / 8;
  }
}

.products-coupon {
  position: fixed;
  top: 1rem;
  left: 1rem;
  width: calc(100% - 2rem);
  padding: 1rem;
  border-radius: $base__border-radius;
  color: $white;
  font-weight: bold;
  line-height: normal;
  text-align: center;
  text-shadow: 0 0 2px rgba(0, 0, 0, 0.2);
  z-index: z-index(modal);

  &.products-coupon--valid {
    background-color: $alert--success;
  }

  &.products-coupon--invalid {
    background-color: $alert--error;
  }
}

.products-coupon__container {
  @include make-container;
}

.products-coupon__close {
  @include screen-sm-min {
    @include transform(translatey(-50%));

    top: 50%;
    right: 1rem;
  }

  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  color: $white;
  font-size: $body__font-size * 2;
  font-weight: bold;
  line-height: 0.5;
  text-shadow: 0 0 2px rgba(0, 0, 0, 0.2);
  cursor: pointer;

  &,
  &:active,
  &:hover,
  &:focus {
    color: $white;
  }
}

.products__search {
  display: flex;
  justify-content: space-between;
  margin: 0 0 $gutter-width;
}

.products__search-form {
  @include make-row(false);
  @include justify-content(space-between);
}

.products__search-box {
  @include screen-lg-min {
    min-width: 20rem;
  }

  min-width: 100%;
  margin: 0 0 $gutter-width / 2 auto;
}
// Review Stars

.review__stars {
  @include align-self(center);

  display: inline-block;
  position: relative;
  width: auto;
  line-height: 1;
  white-space: nowrap;

  .review__star {
    width: $review-star__size;
    height: $review-star__size;
    color: $review-star__filled-color;
    font-size: $review-star__size;
    line-height: normal;
    opacity: 1;
    z-index: z-index(element--background);
  }

  input {
    @include appearance(none);

    display: inline-block;
    position: relative;
    width: $review-star__size;
    height: $review-star__size;
    margin: 0;
    padding: 0;
    border: 0;
    z-index: z-index(element--middleground);

    &:hover,
    &:active,
    &:focus {
      background-color: transparent;
      -webkit-tap-highlight-color: transparent;
    }
  }

  label {
    display: inline-block;
    position: relative;
    width: $review-star__size;
    height: $review-star__size;
  }

  .review__star ~ .review__star {
    left: $review-star__size * 1.25;
  }

  .review__star ~ .review__star ~ .review__star {
    left: $review-star__size * 2.5;
  }

  .review__star ~ .review__star ~ .review__star ~ .review__star {
    left: $review-star__size * 3.75;
  }

  .review__star ~ .review__star ~ .review__star ~ .review__star ~ .review__star {
    left: $review-star__size * 5;
  }
}

.review__stars-input {
  cursor: pointer;

  &:before {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: $review-star__empty-color;
    font-family: $icon__font-family;
    font-size: $review-star__size;
    letter-spacing: 0.21rem;
    line-height: 1;
    content: "\f006 \f006 \f006 \f006 \f006";
  }

  .review__star {
    cursor: pointer;
    opacity: 1;
  }

  input {
    position: relative;
    cursor: pointer;

    &:checked + .review__star ~ .review__star {
      opacity: 0;
    }
  }

  &:hover,
  &:focus {
    .review__star {
      opacity: 1 !important;
    }

    input {
      &:hover + .review__star ~ .review__star,
      &:focus + .review__star ~ .review__star {
        opacity: 0 !important;
      }
    }
  }
}

.review__stars-count {
  @include transform(translatey(-40%));

  position: absolute;
  top: 40%;
  margin-left: $gutter-width / 4;
  font-size: 14px;
  letter-spacing: 1px;
  line-height: 1;
  opacity: 0.5;
}
