// Styles for all Banners
// ======================================

.banner {
  &__container {
    @include make-container;

    &--small,
    &--medium,
    &--large,
    &--xlarge {
      .banner__wrapper {
        padding-top: 4rem;
        padding-bottom: 4rem;
      }
    }

    @include screen-lg-min {
      &--small {
        .banner__wrapper {
          padding-top: $section-height__small;
          padding-bottom: $section-height__small;
        }
      }

      &--medium {
        .banner__wrapper {
          padding-top: $section-height__medium;
          padding-bottom: $section-height__medium;
        }
      }

      &--large {
        .banner__wrapper {
          padding-top: $section-height__large;
          padding-bottom: $section-height__large;
        }
      }

      &--xlarge {
        .banner__wrapper {
          padding-top: $section-height__xlarge;
          padding-bottom: $section-height__xlarge;
        }
      }
    }
  }

  &__wrapper {
    @include make-row(false);
    width: 100%;
  }

  .section__content {
    width: 100%;
  }

  &.section--has-media {
    @include screen-md-max {
      .banner__container {
        padding-top: 4rem;

        &--small,
        &--medium,
        &--large,
        &--xlarge {
          .banner__wrapper {
            padding-top: $gutter-width * 1.5;
          }
        }
      }
    }
    @include screen-lg-min {
      .banner__container {
        @include display(flex);
      }

      .section__content {
        align-self: center;
      }
    }

    .section__button-group {
      .product-action-buttons {
        &__purchase {
          @include make-col(12, false);
        }
      }
    }
  }

  .section__heading {
    @include screen-md-min {
      font-size: $banner__font-size;
    }

    margin-bottom: 0;
    font-family: $banner__font-family;
    font-size: $banner__font-size--mobile;
    font-weight: $banner__font-weight;
    line-height: $banner__line-height;
  }

  .section__subheading {
    margin-top: $margin-3;
    margin-bottom: 0;
  }

  .section__button-group {
    @include button-group;
    @include screen-xl-min {
      @include flex-wrap(nowrap);
    }
    gap: 0 $gutter-width / 2;

    .button {
      @include screen-sm-max {
        &--mobile-width-standard {
          width: unset;
        }

        &--mobile-width-full {
          width: 100%;
        }
      }

      @include screen-md-min {
        margin-right: 0;

        &:first-of-type {
          margin-left: 0;
        }
      }

      margin-bottom: 1rem;
      margin-left: 0;
    }

    .product-action-buttons {
      &--has-additional-prices {
        .form__control.product-action-buttons__additional-prices {
          @include screen-md-min {
            font-size: $button__font-size;
          }
          border-width: $button__border-width;
          font-family: $button__font-family;
          font-size: $button__font-size--mobile;
          font-weight: $button__font-weight;
        }

        .form__select-no-label {
          @include align-self(flex-start);

          width: 100%;
          margin-bottom: 1rem;
          line-height: 1;
        }

        .button {
          &-purchase {
            @include screen-md-min {
              @include flex-grow(1);
              width: auto;
            }
            width: 100%;
          }
          line-height: 1;
          white-space: nowrap;
        }
      }

      &__purchase {
        @include display(flex);
        @include screen-sm-max {
          @include flex-direction(column);
          flex: 0 0 100%;
          max-width: 100%;
        }
        @include screen-md-min {
          @include flex-wrap(nowrap);
          @include flex(1 0 auto);
          @include make-col(10, false);
        }
        @include screen-lg-min {
          @include make-col(8, false);
          margin-bottom: 1rem;
        }
        width: 100%;
        gap: 0 $gutter-width / 2;
      }
    }
  }

  .section__video {
    @include align-self(center);
    width: 100%;

    &__wrapper {
      width: 100%;
    }
  }

  .section__image {
    @include screen-md-min {
      min-height: 400px;
    }
    @include screen-lg-min {
      margin: $margin-2 0;
    }
    width: 100%;
    min-height: 250px;
  }
}
