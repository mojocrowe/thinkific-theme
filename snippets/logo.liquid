<section class="header__logo">
  {% if section.settings.site_logo != empty %}
    <a href="{{ site_url }}">
      <img
        src="{{ section.settings.site_logo }}"
        srcset="{{ section.settings.site_logo }}?width=384&dpr=1 1x, {{ section.settings.site_logo }}?width=384&dpr=2 2x, {{ section.settings.site_logo }}?width=384&dpr=3 3x"
        alt="{{ section.settings.logo_alt }}"
        class="logo img-responsive"
        loading="lazy"
      >
      <h1 class="sr-only">
        {{ site.name }}
      </h1>
    </a>
  {% else %}
    <a href="{{ site_url }}">
      <img
        src="{{ 'mojo-logo-orange.png' | theme_asset_url }}"
        srcset="{{ 'mojo-logo-orange.png' | theme_asset_url }}?width=384&dpr=1 1x, {{ 'mojo-logo-orange.png' | theme_asset_url }}?width=384&dpr=2 2x, {{ 'mojo-logo-orange.png' | theme_asset_url }}?width=384&dpr=3 3x"
        alt="Logo"
        class="logo img-responsive"
        loading="lazy"
      >
      <h1 class="sr-only">
        {{ site.name }}
      </h1>
    </a>
  {% endif %}
</section>
