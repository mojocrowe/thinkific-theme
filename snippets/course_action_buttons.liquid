{% comment %}
  These are the buttons that can appear on a course landing page
  Free Trial, Buy, Enroll for Free, etc.
{% endcomment %}

{% assign course = page.course %}
<div class="
  product-action-buttons__purchase
  {% if course.additional_prices != empty %}product-action-buttons--has-additional-prices{% endif %}
">
  {% if course.user_can_resume %}
    {% if course.user_enrollment_complete %}
      <a href="{{ course.links.resume }}" class="button button-secondary">
        {{ 'liquid.partials.course_landing_page_action_buttons.link_review_course' | translate }}
      </a>
    {% else %}
      <a
        href="{{ course.links.resume }}"
        class="button{% if course.user_can_purchase %} button-secondary{% else %} button-primary{% endif %}"
      >
        {{ 'liquid.partials.course_landing_page_action_buttons.link_resume_course' | translate }}
      </a>
    {% endif %}

    {% if course.reviews_enabled %}
      {% unless course.user_can_purchase %}
        <a
          href="{{ course.links.review }}"
          class="button{% if course.user_enrollment_complete %} button-primary{% else %} button-secondary{% endif %}"
        >
          {{ 'liquid.partials.course_landing_page_action_buttons.link_rate_course' | translate }}
        </a>
      {% endunless %}
    {% endif %}
  {% endif %}

  {% if course.is_public %}
    {% if course.is_free and course.user_is_enrolled == false %}
      {% if course.is_presell %}
        <a href="{{ course.links.enroll_free }}" class="button button-primary">{{ 'liquid.partials.course_landing_page_action_buttons.link_preorder_now' | translate }}</a>
      {% else %}
        <a href="{{ course.links.enroll_free }}" class="button button-primary" data-qa="enroll-free__btn">{{ 'liquid.partials.course_landing_page_action_buttons.link_enroll_free' | translate }}</a>
      {% endif %}
    {% endif %}

    {% if course.user_can_purchase %}
      {% if course.additional_prices != empty %}
        <div class="form__select-no-label">
          <label for="{{ course.name | kebab_case }}" class="sr-only">
            {{ 'liquid.accessibility.select_label_multiple_prices' | translate }}
          </label>
          <select
            id="{{ course.name | kebab_case }}"
            name="{{ course.display_price }}"
            class="form__control product-action-buttons__additional-prices"
          >
            <option value="{{ course.links.buy }}" selected>{{ course.display_price }}</option>
            {% for price in course.additional_prices %}
              <option value="{{ price.links.add_to_cart }}">{{ price.display_price }}</option>
            {% endfor %}
          </select>
        </div>
      {% endif %}

      <a href="{{ course.links.buy }}" class="button button-primary button-purchase" data-qa="purchase__btn">
        {% if course.is_presell %}
          {{ 'liquid.partials.course_landing_page_action_buttons.link_preorder_now' | translate }}
        {% else %}
          {% if course.additional_prices != empty %}
            {{ 'liquid.partials.course_landing_page_action_buttons.buy_button_multiple_prices' | translate }}
          {% else %}
            {{ course.buy_button_text }}
          {% endif %}
        {% endif %}
      </a>

      {% if course.has_free_trial %}
        <a
          href="{{ course.links.enroll_free_trial }}"
          class="button{% unless course.user_can_purchase %} button-primary{% else %} button-secondary{% endunless %} button-free-trial" data-qa="enroll-free-trial__btn"
        >
          {{ 'liquid.partials.course_landing_page_action_buttons.link_free_trial' | translate }}
        </a>
      {% endif %}
    {% endif %}
  {% else %}
    {% if course.user_can_resume == false %}
      <p class="product-action-button--private">
        <i class="fa fa-lock" aria-hidden="true"></i>
        <a href="mailto:{{ site.support_email }}" target="_blank">
          {{ 'liquid.partials.course_landing_page_action_buttons.private_course_cta_text' | translate: site_support_email: site.support_email }}
          <i class='fa fa-external-link' role='img' aria-label="{{ 'liquid.accessibility.new_window_warning' | translate }}"></i>
        </a>
      </p>
    {% endif %}
  {% endif %}
</div>

<script>
$(window).on('load', function() {
  var $priceList = $('.product-action-buttons__additional-prices'),
      $buttonPurchase = $('.product-action-buttons .button-purchase');
  $buttonPurchase.attr('href', $priceList.val());
  $priceList.on('change', function() {
    $buttonPurchase.attr('href', $(this).val());
  });
});
</script>
