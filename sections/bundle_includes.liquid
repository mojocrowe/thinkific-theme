<section class="bundle-includes section-height__medium
{% include 'section_utility_heading_alignment' %}" data-preview-item="bundle-includes">
  <div class="bundle-includes__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% assign bundle = page.bundle %}
      {% if bundle.items.size > 0 %}
        {% assign initial_products = 6 %}
      {% endif %}
      <ul class="products__list section__body">
        {% for product in bundle.items limit: initial_products %}
          <li class="products__list-item">
            {% include 'card' product: product %}
          </li>
        {% endfor %}
        {% for product in bundle.items offset: initial_products %}
          <li class="products__list-item bundle-includes--hidden hidden">
            {% include 'card' product: product %}
          </li>
        {% endfor %}
      </ul>
      {% if bundle.items.size > initial_products %}
        <div id="see-more" class="section__button-group">
          <a href="#see-more" class="button button-primary bundle-includes__see-all-button">
            {{ 'liquid.views.bundle_landing_page.link_view_all' | translate }}
        </div>
      {% endif %}
    </article>
  </div>
</section>

<script>
$(document).ready(function() {
  var $seeAllProductsButton = $('#see-more'),
      $additionalProductsArea = $('.bundle-includes--hidden.hidden');

  $seeAllProductsButton.on('click', function(e) {
    $additionalProductsArea.removeClass('hidden');
    $(this).addClass('hidden');
  });
});

</script>

{% style %}

.bundle-includes {
  {% include 'section_style_background_color' %}
  {% include 'section_style_card_alignment' %}
  {% include 'section_style_heading_alignment' %}

  {% if section.settings.section_padding_top %}
    .bundle-includes__container {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.section_padding_bottom %}
    .bundle-includes__container {
      padding-bottom: 0;
    }
  {% endif %}
}

{% endstyle %}

