<section
  class="countdown section-height__medium {% include 'section_utility_column_layout' %}"
  data-preview-item="countdown"
>
  <div class="countdown__container">
    <div class="countdown__wrapper">
      {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <header class="section__headings">
          {% if section.settings.heading != blank %}
            <h2 class="section__heading">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <p class="section__subheading">{{ section.settings.subheading }}</p>
          {% endif %}
          {% if section.settings.button_text != blank %}
            <div class="section__button-group">
              <a class="button button-{{ section.settings.button_type }}" href="{{ section.settings.button_link }}">
                {{ section.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </header>
      {% endif %}
      <div class="section__content section__body" role="timer">
        <ul class="countdown-clock" data-deadline="{{ section.settings.expiry_date }}">
          <li class="clock-days clock-interval">
            <span class="countdown__count">00</span>
            <strong>{{ 'liquid.partials.countdown.days' | translate }}</strong>
          </li>
          <li class="clock-hours clock-interval">
            <span class="countdown__count">00</span>
            <strong>{{ 'liquid.partials.countdown.hours' | translate }}</strong>
          </li>
          <li class="clock-minutes clock-interval">
            <span class="countdown__count">00</span>
            <strong>{{ 'liquid.partials.countdown.minutes' | translate }}</strong>
          </li>
          <li class="clock-seconds clock-interval">
            <span class="countdown__count">00</span>
            <strong>{{ 'liquid.partials.countdown.seconds' | translate }}</strong>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>

{% style %}
.countdown {
  {% include 'section_style_background_color' %}
  {% include 'section_style_column_layout' %}

  {% if section.settings.section_padding_top %}
    .countdown__container {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.section_padding_bottom %}
    .countdown__container {
      padding-bottom: 0;
    }
  {% endif %}
}
{% endstyle %}

{% schema %}
{
  "label":"Countdown timer",
  "description":"",
  "previewImageUrl":"https://cdn.thinkific.com/57/20210222/81d0e60cf1481ffb97fe59ad6dc9ea99.png",
  "previewDescription":"Add urgency to the buying decision",
  "settings":[
    {
      "type":"datetime",
      "id":"expiry_date",
      "label":"Expiry date and time (UTC)",
      "default":"2022-12-31T18:00:00.000Z"
    },
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Countdown timer"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Use this section to create urgency for your offer."
        }
      ]
    },
    {
      "label":"Button",
      "settings":[
        {
          "type":"page_picker",
          "id":"button_link",
          "label":"Link to",
          "default":""
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Call to action"
        },
        {
          "type":"radio",
          "id":"button_type",
          "label":"Button style",
          "description":"",
          "default":"primary",
          "options":[
            {
              "value":"primary",
              "label":"Primary"
            },
            {
              "value":"secondary",
              "label":"Secondary"
            }
          ]
        }
      ]
    },
    {
      "label":"Background & layout",
      "settings":[
        {
          "type":"select",
          "id":"background_color",
          "label":"Background color",
          "description":"",
          "default":"background_2",
          "options":[
            {
              "value":"background_1",
              "label":"Primary"
            },
            {
              "value":"background_2",
              "label":"Secondary"
            },
            {
              "value":"background_3",
              "label":"Tertiary"
            }
          ]
        },
        {
          "type":"checkbox",
          "id":"section_padding_top",
          "label":"Remove top section padding",
          "default":false
        },
        {
          "type":"checkbox",
          "id":"section_padding_bottom",
          "label":"Remove bottom section padding",
          "default":false
        },
        {
          "type":"radio",
          "id":"column_layout",
          "label":"Column layout",
          "description":"",
          "default":"two-column",
          "options":[
            {
              "value":"one-column",
              "label":"One Column"
            },
            {
              "value":"two-column",
              "label":"Two Columns"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
