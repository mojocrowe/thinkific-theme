<section class=
  "
    instructor section-height__medium
    {% include 'section_utility_heading_alignment' %}
  "
  data-preview-item="instructor"
>
  <div class="instructor__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% if section.blocks != empty %}
        <div class="instructor__list section__body" role="list">
          {% for block in section.blocks %}
          {% assign instructor = block.settings.instructor %}
            <div class="instructor__profile" role="listitem">
              <header>
                {% if instructor.avatar != blank %}
                  <img
                    src="{{ instructor.image.original }}"
                    srcset="{{ instructor.image.original }}?width=250 1x, {{ instructor.image.original }}?width=250&dpr=2 2x, {{ instructor.image.original }}?width=250&dpr=3 3x"
                    alt=""
                    class="instructor__avatar"
                    loading="lazy"
                    width="250"
                  />
                {% endif %}
                  <h3 class="instructor__name section__heading--secondary">
                    {{ instructor.full_name }}
                  </h3>
                {% if instructor.title != blank %}
                  <h4 class="instructor__title">
                    {{ instructor.title }}
                  </h4>
                {% endif %}
                {% if instructor.email != blank and section.settings.show_email == true %}
                  <a class="instructor__email" href="mailto:{{ instructor.email }}">{{ instructor.email }}</a>
                {% endif %}
              </header>
              {% if instructor.bio != blank %}
                <div class="instructor__bio">
                  {{ instructor.bio }}
                </div>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </article>
  </div>
</section>

{% style %}
.instructor {
  {% include 'section_style_background_color' %}
  {% include 'section_style_heading_alignment' %}

  {% if section.settings.section_padding_top %}
    .instructor__container {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.section_padding_bottom %}
    .instructor__container {
      padding-bottom: 0;
    }
  {% endif %}
}
{% endstyle %}

{% schema %}
{
  "label":"Instructor(s)",
  "description":"Select which Instructor bio(s) will appear in this section. <a href='/manage/instructors/' target='_blank'>Manage your Instructor bios Â»</a>",
  "previewImageUrl":"https://cdn.thinkific.com/57/20210222/9cb9f613d5e90edabf7872782d02bce1.png",
  "previewDescription":"Introduce your course experts",
  "settings":[
    {
      "type":"checkbox",
      "id":"show_email",
      "label":"Show instructor email",
      "default":true
    },
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Instructor(s)"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    },
    {
      "label":"Background & layout",
      "settings":[
        {
          "type":"select",
          "id":"background_color",
          "label":"Color",
          "description":"",
          "default":"background_1",
          "options":[
            {
              "value":"background_1",
              "label":"Primary"
            },
            {
              "value":"background_2",
              "label":"Secondary"
            },
            {
              "value":"background_3",
              "label":"Tertiary"
            }
          ]
        },
        {
          "type":"checkbox",
          "id":"section_padding_top",
          "label":"Remove top section padding",
          "default":false
        },
        {
          "type":"checkbox",
          "id":"section_padding_bottom",
          "label":"Remove bottom section padding",
          "default":false
        }
      ]
    }
  ],
  "blocks":{
    "label":"Add instructor bio",
    "limit":3,
    "types":[
      {
        "type":"instructor",
        "label":"Instructor bio",
        "settings":[
          {
            "type":"instructor_picker",
            "id":"instructor",
            "label":"Instructor"
          }
        ]
      }
    ],
    "defaults": []
  }
}
{% endschema %}
