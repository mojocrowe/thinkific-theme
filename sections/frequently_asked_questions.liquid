<section
  class="faq section-height__medium {% include 'section_utility_heading_alignment' %}"
  data-preview-item="faq"
>
  <div class="faq__container">
    <div class="faq__wrapper">
      {% include 'section_headings' %}
      <article class="section__content">
        {% if section.blocks != empty %}
          <ul class="faq__list section__body">
            {% for block in section.blocks %}
              <li class="faq__list-item">
                <details {% if section.settings.show_collapsed == false %}open{% endif %}>
                  <summary>
                    <strong>
                      <i class="toga-icon toga-icon-caret-stroke-down" aria-hidden="true"></i>
                      {{ block.settings.faq_question }}
                    </strong>
                  </summary>
                  <p>{{ block.settings.faq_answer }}</p>
                </details>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </article>
    </div>
  </div>
</section>

{% style %}

.faq {
  {% include 'section_style_background_color' %}
  {% include 'section_style_heading_alignment' %}

  {% if section.settings.section_padding_top %}
    .faq__container {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.section_padding_bottom %}
    .faq__container {
      padding-bottom: 0;
    }
  {% endif %}
}

{% endstyle %}

