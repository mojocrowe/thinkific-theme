{% assign course = page.course %}

<section
  class="banner--course {% include 'section_utility_banners' %}"
  data-preview-item="banner-course"
>
  <div class="banner__container banner__container--{{ section.settings.section_height_preset}}">
    {% if section.settings.media_alignment == "left" %}
      {% include 'image_or_video' %}
    {% endif %}
    <div class="banner__wrapper">
      <article class="section__content">
        {% if section.settings.show_default_banner_text == true %}
          <header class="section__headings section__headings">
            <h2 class="section__heading">{{ page.course.name }}</h2>
            {% if page.course.description != blank %}
              <p class="section__subheading">{{ page.course.description }}</p>
            {% endif %}
          </header>
        {% else %}
          {% include 'section_headings' %}
        {% endif %}
        {% if section.blocks != empty %}
          <div class="section__button-group">
            {% for block in section.blocks %}
              <a class="button button-{{ block.settings.button_type }} button--mobile-width-{{ block.settings.mobile_width }}" href="{{ block.settings.button_link }}">
                {{ block.settings.button_text }}
              </a>
            {% endfor %}
            {% if course.has_free_trial and section.settings.hide_default_buttons == false %}
              <a
                href="{{ course.links.enroll_free_trial }}"
                class="button{% unless course.user_can_purchase %} button-primary{% else %} button-secondary{% endunless %}"
              >
                {{ 'liquid.partials.course_landing_page_action_buttons.link_free_trial' | translate }}
              </a>
            {% endif %}
          </div>
        {% else %}
          {% if section.settings.hide_default_buttons == false %}
            {% include 'product_action_buttons' %}
          {% endif %}
        {% endif %}
      </article>
    </div>
    {% if section.settings.media_alignment == "right" %}
      {% include 'image_or_video' %}
    {% endif %}
  </div>
</section>

{% style %}
{% include 'section_style_banners' %}
{% endstyle %}

