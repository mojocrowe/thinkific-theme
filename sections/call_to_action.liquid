<section class="call-to-action
{% include 'section_utility_background' %}
{% include 'section_utility_content_alignment' %}
{% include 'section_utility_height_preset' %}" data-preview-item="call-to-action">
{% if section.settings.button_show and section.settings.button_link != null %}
  <a href="{{ section.settings.button_link }}" class="call-to-action__section-link">
{% endif %}
  <div class="call-to-action__container">
    <div class="call-to-action__wrapper">
      <article class="section__content">
        {% include 'section_headings' %}
        {% if section.settings.button_show != true and section.settings.button_text != empty %}
          <div class="section__button-group">
            <a class="button button-{{ section.settings.button_type }}" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
          </div>
        {% endif %}
      </article>
    </div>
  </div>
{% if section.settings.button_show and section.settings.button_link != null %}
  </a>
{% endif %}
</section>

{% style %}

.call-to-action {
  {% include 'section_style_content_alignment' %}
  {% include 'section_style_background_color' %}
  {% if section.settings.background_image == blank %}
    {% include 'section_style_text_default' %}
  {% else %}
    {% include 'section_style_background' %}
  {% endif %}
}

{% endstyle %}

{% schema %}
{
  "label":"Call to action",
  "description":"",
  "previewImageUrl":"https://cdn.thinkific.com/57/20210222/52f32d825d404506e55b66f757053819.png",
  "previewDescription":"Convert visitors into students",
  "settings":[
    {
      "label":"Text",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Call to action"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":"Get started now"
        }
      ]
    },
    {
      "label":"Button",
      "settings":[
        {
          "type":"page_picker",
          "id":"button_link",
          "label":"Link to"
        },
        {
          "type":"text",
          "id":"button_text",
          "label":"Button text",
          "default":"Buy Now"
        },
        {
          "type":"radio",
          "id":"button_type",
          "label":"Button style",
          "description":"",
          "default":"primary",
          "options":[
            {
              "value":"primary",
              "label":"Primary"
            },
            {
              "value":"secondary",
              "label":"Secondary"
            }
          ]
        },
        {
          "type":"checkbox",
          "id":"button_show",
          "label":"Hide button & make entire section clickable",
          "default":false
        }
      ]
    },
    {
      "label":"Background",
      "settings":[
        {
          "type":"select",
          "id":"background_color",
          "label":"Color",
          "description":"",
          "default":"background_2",
          "options":[
            {
              "value":"background_1",
              "label":"Primary"
            },
            {
              "value":"background_2",
              "label":"Secondary"
            },
            {
              "value":"background_3",
              "label":"Tertiary"
            }
          ]
        },
        {
          "type":"image",
          "id":"background_image",
          "default":"",
          "description":"<small>Recommended: <strong>1440px x 720px (1MB)</strong></small>",
          "label":"Image"
        },
        {
          "type":"image_origin",
          "id":"background_image_origin",
          "default": "center center",
          "label":"Image focal point"
        },
        {
          "type":"color",
          "id":"overlay_color",
          "label":"Overlay color",
          "default":"#000000"
        },
        {
          "type":"number",
          "id":"overlay_opacity",
          "label":"Overlay opacity",
          "default":30,
          "min":0,
          "max":100
        },
        {
          "type":"color",
          "id":"text_color",
          "label":"Text color override",
          "default":"#ffffff"
        }
      ]
    },
    {
      "label":"Size & alignment",
      "settings":[
        {
          "type":"select",
          "id":"section_height_preset",
          "label":"Height",
          "description":"",
          "default":"medium",
          "options":[
            {
              "value":"small",
              "label":"Small"
            },
            {
              "value":"medium",
              "label":"Medium"
            },
            {
              "value":"large",
              "label":"Large"
            },
            {
              "value":"xlarge",
              "label":"Extra large"
            }
          ]
        },
        {
          "type":"radio",
          "id":"content_alignment",
          "label":"Alignment",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    }
  ]
}
{% endschema %}
