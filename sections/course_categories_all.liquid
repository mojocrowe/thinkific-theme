<section class="course-categories course-categories-all section-height__medium
{% include 'section_utility_heading_alignment' %}" data-preview-item="course-categories-all">
  <div class="course-categories__container">
    {% include 'section_headings' %}
    <article class="section__content">
      {% include 'products_category_list' %}
    </article>
  </div>
</section>

{% style %}

.course-categories {
  {% include 'section_style_background_color' %}
  {% include 'section_style_heading_alignment' %}

  {% if section.settings.section_padding_top %}
    .course-categories__container {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.section_padding_bottom %}
    .course-categories__container {
      padding-bottom: 0;
    }
  {% endif %}
}

{% endstyle %}

{% schema %}
{
  "label":"All categories [smart section]",
  "description":"This smart section automatically populates based on your categories. <a href='/manage/collections/' target='_blank'>Edit categories Â»</a>",
  "previewImageUrl":"https://cdn.thinkific.com/57/20210222/ad6fc686393952d8b0f24902ca7ef1f4.png",
  "previewDescription":"Show your different categories",
  "settings":[
    {
      "type":"checkbox",
      "id":"show_category_name",
      "label":"Show category name",
      "default":true
    },
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Categories"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"center",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    },
    {
      "label":"Background & layout",
      "settings":[
        {
          "type":"select",
          "id":"background_color",
          "label":"Color",
          "description":"",
          "default":"background_2",
          "options":[
            {
              "value":"background_1",
              "label":"Primary"
            },
            {
              "value":"background_2",
              "label":"Secondary"
            },
            {
              "value":"background_3",
              "label":"Tertiary"
            }
          ]
        },
        {
          "type":"checkbox",
          "id":"section_padding_top",
          "label":"Remove top section padding",
          "default":false
        },
        {
          "type":"checkbox",
          "id":"section_padding_bottom",
          "label":"Remove bottom section padding",
          "default":false
        }
      ]
    }
  ]
}
{% endschema %}
